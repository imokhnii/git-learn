<a asp-action="Create">Add user</a>

<table class="table">
    <tr><th>Email</th><th>Year</th><th>First Name</th><th>Last Name</th><th>Country</th><th>Bike</th><th>Team</th><th></th></tr>
    @foreach (var user in Model)
    {
<tr>
    <td>@user.Email</td>
    <td>@user.Year</td>
    <td>@user.firstName</td>
    <td>@user.lastName</td>
    <td>@user.Country</td>
    <td>@user.Bike</td>
    <td>@user.Team</td>
    <td>
        <form asp-action="Delete" asp-route-id="@user.Id" method="post">
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Change</a>
            <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Change the password</a>
            <button type="submit" class="btn btn-sm btn-danger">
                Delete
            </button>
        </form>
    </td>
</tr>
    }
</table>